<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_admin"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="17dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Welcome_admin"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_rockwaste_com"
                    android:textSize="14sp"
                    android:textColor="@color/white_alpha_80"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Cards Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Customers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_stats_card">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_customers"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/customersCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/customers"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bookings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_stats_card">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_bookings"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/bookingsCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bookings"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Payments Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_stats_card">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_payments"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/paymentsCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/r_0"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payments"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Workers Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_stats_card">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_workers"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/workersCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/workers"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Quick Actions Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_actions"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp" />

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewCustomersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_customers"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewBookingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_bookings"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewPaymentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_payments"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/assignWorkersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assign_workers"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/adminLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:icon="@drawable/ic_logout"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:iconTint="@color/white"
            app:backgroundTint="@color/red_600"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:layout_marginTop="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>