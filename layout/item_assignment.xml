<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Status Indicator -->
        <ImageView
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="#6C757D" />

        <!-- Assignment Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worker Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />

            <TextView
                android:id="@+id/tvBookingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Address"
                android:textSize="14sp"
                android:textColor="#6c757d"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#95a5a6"
                android:layout_marginTop="2dp" />

            <!-- Status Badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvWorkerStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="10sp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:background="#FFC107"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvBookingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned"
                    android:textSize="10sp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:background="#17A2B8"
                    android:textColor="#FFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:textSize="12sp"
                android:backgroundTint="#28A745"
                android:layout_marginBottom="4dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#DC3545" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>